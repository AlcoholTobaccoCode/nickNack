{
  "name": "collector-tasks-api",
  "version": "1.0.0",
  "description": "Collector Tasks API",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "build:win": "pkg . --targets node16-win-x64 --output dist/collector-tasks-api-win",
    "build:linux": "pkg . --targets node16-linux-x64 --output dist/collector-tasks-api-linux",
    "build:mac": "pkg . --targets node16-macos-x64 --output dist/collector-tasks-api-mac"
  },
  "bin": "src/app.js",
  "pkg": {
    "assets": [
      "src/**/*"
    ],
    "targets": [
      "node16-win-x64"
    ]
  },
  "dependencies": {
    "axios": "^1.8.4",
    "express": "^4.18.2",
    "mysql2": "^3.6.0"
  },
  "devDependencies": {
    "pkg": "^5.8.1"
  }
}
